<%= form_for @lecture do |f| %>

  <% if @lecture.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@lecture.errors.count, "error") %> prohibited this lecture from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @lecture.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :course_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :course_id, :value => 10010 ,:class => 'form-control' %>
    </div>
    <%=f.error_span(:course_id) %>
  </div>
  <div class="form-group">
    <%= f.label :lecture_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :lecture_name, :value => "test the upload", :class => 'form-control' %>
    </div>
    <%=f.error_span(:lecture_name) %>
  </div>
  <div class="form-group">
    <%= f.label :url, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field:url, :class => 'form-control' %>
    </div>
    <%=f.error_span(:url) %>
  </div>
  

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Create' , :class => 'btn btn-default' %>  
      
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                lectures_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
