<%- model_class = Lecture -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:course_id) %></th>
      <th><%= model_class.human_attribute_name(:lecture_name) %></th>
      <th><%= model_class.human_attribute_name(:url) %></th>
      <th><%= model_class.human_attribute_name(:secret_key) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @lectures.each do |lecture| %>
      <tr>
        <td><%= link_to lecture.id, lecture_path(lecture) %></td>
        <td><%= lecture.course_id %></td>
        <td><%= lecture.lecture_name %></td>
        <td><a href='<%= lecture.url %>' ><%=lecture.url%></a></td>
        <td><%= lecture.secret_key %></td>
        <td><%= lecture.created_at %></td>
        <td>
          <%= link_to "删除", lectures_delete_path(:id => lecture.secret_key), method: :delete %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_lecture_path,
            :class => 'btn btn-primary' %>
